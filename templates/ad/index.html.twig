{% extends 'base.html.twig' %}

{% block title %}Hello AdController!{% endblock %}

{% block body %}
    {% for ad in ads %}
        {% set weight = ad.weight %}
        {% if weight == 1 %}
                <figure>
                    <img src="{{ @uploaded/ad.image }}" alt="">
                </figure>
        {% else %}
            {% for i in 1 .. weight %}
                <figure>
                    <img src="{{ @uploaded/ad.image }}" alt="">
                </figure>
            {% endfor %}
        {% endif %}
    {% endfor %}
{% endblock %}
